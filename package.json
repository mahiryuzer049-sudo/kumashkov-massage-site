{
  "name": "kumashkov-massage-website",
  "version": "1.1.0",
  "description": "Premium landing for professional massage therapist Pavel Kumashkov. Exclusive massage services in Moscow.",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 8000",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint:css": "stylelint \"src/styles/**/*.css\"",
    "lint:html": "html-validate \"dist/**/*.html\"",
    "format": "prettier --write \"src/**/*.{html,js,css}\"",
    "lint": "npm run lint:js && npm run lint:css",
    "check": "npm run lint && npm run build && npm run lint:html"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "html-validate": "^8.18.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.3",
    "vite-plugin-handlebars": "^2.0.0",
    "vite": "^5.2.0"
  }
}
